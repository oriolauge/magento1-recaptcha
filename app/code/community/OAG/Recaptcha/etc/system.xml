<?xml version="1.0"?>
<config>
    <tabs>
        <oag translate="label">
            <label>OAG</label>
            <sort_order>999</sort_order>
        </oag>
    </tabs>
    <sections>
        <oag_recaptcha translate="label">
            <label>OAG reCaptcha</label>
            <tab>oag</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General configuration values</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Module enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>With this flag, you can enable/disable all recaptcha functionality</comment>
                        </enabled>
                        <site_key translate="label comment">
                            <label>Site Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Site key from your recaptcha v2 invisible</comment>
                        </site_key>
                        <secret_key translate="label comment">
                            <label>Secret Key</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Secret key from your recaptcha v2 invisible</comment>
                        </secret_key>
                    </fields>
                </general>
            </groups>
        </oag_recaptcha>
    </sections>
</config>
